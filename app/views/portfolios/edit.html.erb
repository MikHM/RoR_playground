<h2>Edit Portfolio Item</h2>

<%= form_for(@portfolio_item) do |f| %>
  <div class="field">
    <%= f.label :title %> <br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :subtitle %> <br>
    <%= f.text_field :subtitle %>
  </div>
  <div class="field">
    <%= f.label :body %> <br>
    <%= f.text_area :body %>
  </div>
  <div class="action">
    <%= f.submit %>
  </div>
<% end %>

<%= link_to "Delete Portfolio Item", portfolio_path(@portfolio_item),
            method: :delete,
            data: { confirm: "Are you sure you want to delete?"},
            class: "btn btn-danger"
%>