<div class="col-md-4">
  <div class="card mb-4 box-shadow">  
    <p><%= image_tag portfolio.thumb_image unless portfolio.thumb_image.nil? %></p>
    <div class="card-body">
      <h3><%= link_to portfolio.title, portfolio_show_path(portfolio) %></h3>
      <h4><%= portfolio.subtitle %></h4>
      <p class="card-text"><%= portfolio.body %></p>
      <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
          <% portfolio.technologies.each do |tech| %>
          <button type="button" class="btn btn-sm btn-outline-secondary">
            <%= tech.name %>
          </button>
          <% end %>
        </div>
        <div class="btn-group">
          <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to  "View", portfolio_show_path(portfolio) %></button>
          <% if logged_in?(:admin) %>
            <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to "Edit", edit_portfolio_path(portfolio) %></button>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>