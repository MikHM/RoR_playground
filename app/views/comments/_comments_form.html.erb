<h3>Add comments</h3>

<%= form_for([@post, @post.comments.build]) do |f| %>

    <p>
      <%= f.label :user_name %> <br>
      <%= f.text_field :user_name, :class => "form-control" %>
    </p>

    <p>
      <%= f.label :message %> <br>
      <%= f.text_area :message, :class => "form-control" %>
    </p>

    <p>
      <%= f.submit(:class => "btn btn-primary")  %>
    </p>
<% end %>