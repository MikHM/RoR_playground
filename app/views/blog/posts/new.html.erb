<h1>Create a new post</h1><%= form_for :post, url: posts_path do |f| %>    <% if @post.errors.any? %>      <%= @post.errors.full_messages.each do |msg| %>        <p class="alert alert-danger"><%= msg %></p>        <% end %>    <% end %>    <p>      <%= f.label :title %> <br>      <%= f.text_field( :title, { :class => "form-control" }) %>    </p>    <p>      <%= f.label :author %> <br>      <%= f.text_field( :author, { :class => "form-control" }) %>    </p>    <p>      <%= f.label :body %> <br>      <%= f.text_area( :body, { :class => "form-control" }) %>    </p>    <p>      <%= f.label :topic_id %>      <%= f.select( :topic_id, Topic.all.map{ |topic| [topic.title, topic.id]}, { :class => "form-control" }) %>    </p>    <p>      <%= f.submit({ :class => "btn btn-primary"}) %>    </p><% end %>