<div class="row">
  <div class="blog-post col-md-8 offset-md-2 mt-5">
  <h2>Editing: <%= @post.title %></h2>

  <%= form_for :post, url: blog_post_path(@post), method: :patch do |f| %>

    <% if @post.errors.any? %>
      <%= @post.errors.full_messages.each do |msg| %>
          <p><%= msg %></p>
      <% end %>
    <% end %>

    <p>
      <%= f.label :title %> <br>
      <%= f.text_field( :title, { :class => "form-control" }) %>
    </p>
    <p>
      <%= f.label :author %> <br>
      <%= f.text_field( :author, { :class => "form-control" }) %>
    </p>
    <p>
      <%= f.label :body %> <br>
      <%= f.text_area( :body, { :class => "form-control" }) %>
    </p>
    <p>
      <%= f.label :topic_id %>
      <%= f.select( :topic_id, Blog::Topic.all.map{ |topic| [topic.title, topic.id] }) %>
    </p>

    <p>
      <%= f.submit({ :class => "btn btn-primary"}) %>
    </p>
  <% end %>
  </div>
</div>